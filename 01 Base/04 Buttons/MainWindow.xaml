<Window
    x:Class="_04_Buttons.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_04_Buttons"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            BorderThickness="4"
            Content="Row 0 Column 0" />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            BorderThickness="4"
            Content="Row 0 Column 1" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            BorderThickness="4"
            Content="Row 0 Column 2" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            BorderThickness="4"
            Content="Row 0 Column 3" />
        <Button
            Grid.Row="1"
            Grid.Column="0"
            BorderThickness="4"
            Content="Row 1 Column 0" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            BorderThickness="4"
            Content="Row 1 Column 1" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            BorderThickness="4"
            Content="Row 1 Column 2" />
        <Button
            Grid.Row="1"
            Grid.Column="3"
            BorderThickness="4"
            Content="Row 1 Column 3" />
        <Button
            Grid.Row="2"
            Grid.Column="0"
            BorderThickness="4"
            Content="Row 2 Column 0" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            BorderThickness="4"
            Content="Row 2 Column 1" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            BorderThickness="4"
            Content="Row 2 Column 2" />
        <Button
            Grid.Row="2"
            Grid.Column="3"
            BorderThickness="4"
            Content="Row 2 Column 3" />
        <Button
            Grid.Row="3"
            Grid.Column="0"
            BorderThickness="4"
            Content="Row 3 Column 0" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            BorderThickness="4"
            Content="Row 3 Column 1" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            BorderThickness="4"
            Content="Row 3 Column 2" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            BorderThickness="4"
            Content="Row 3 Column 3" />
    </Grid>
</Window>
