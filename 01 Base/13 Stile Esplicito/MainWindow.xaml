<Window x:Class="_13_Stile_Esplicito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_13_Stile_Esplicito"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.Resources>
        
        <Style TargetType="Label" x:Key="Header">
            <Setter Property="FontSize" Value="30"></Setter>
            <Setter Property="Foreground" Value="Blue"></Setter>
        </Style>
        
        <Style TargetType="Label" x:Key="Title">
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="Foreground" Value="Purple"></Setter>
        </Style>
        
        <Style TargetType="Label" x:Key="Paragraph">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Foreground" Value="Red"></Setter>
        </Style>
        
    </Window.Resources>
    
    <Grid>
        <StackPanel>
            <Label Content="Header" Style="{StaticResource Header}"></Label>
            <Label Content="Title" Style="{StaticResource Title}"></Label>
            <Label Content="Paragraph" Style="{StaticResource Paragraph}"></Label>
        </StackPanel>
    </Grid>
</Window>
