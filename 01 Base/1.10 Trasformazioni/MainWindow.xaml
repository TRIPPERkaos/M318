<Window x:Class="_1._10_Trasformazioni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1._10_Trasformazioni"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <Border Width="200" Height="200" Margin="20" BorderBrush="Black" BorderThickness="1">
                <Canvas Height="200" Width="200">
                    <Line X1="0" Y1="0" X2="80" Y2="80" Stroke="Red"></Line>
                    <Rectangle Width="80" Height="40" Stroke="Orange" Canvas.Top="100" Canvas.Left="30"></Rectangle>
                    <Slider Minimum="0" Maximum="100" TickPlacement="BottomRight" TickFrequency="0.1" IsSnapToTickEnabled="True" Canvas.Top="145" Canvas.Left="80"></Slider>
                    <TextBox Text="5" Canvas.Top="165" Canvas.Left="80"></TextBox>
                </Canvas>
            </Border>
        </StackPanel>
    </Grid>
</Window>
