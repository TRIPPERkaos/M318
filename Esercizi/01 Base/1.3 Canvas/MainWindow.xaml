<Window
    x:Class="_1._3_Canvas.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_1._3_Canvas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="03 Canvas"
    Width="400"
    Height="450"
    mc:Ignorable="d">

    <Canvas
        Width="400"
        Height="450"
        Background="Green">
        <Label
            x:Name="lNome"
            Canvas.Left="120"
            Canvas.Top="130"
            Content="Nome"
            FontSize="15"
            Foreground="White" />
        <TextBox
            x:Name="tbNobita"
            Canvas.Left="120"
            Canvas.Top="160"
            Width="180"
            Height="30"
            FontSize="20"
            Text="Nobita"
            TextAlignment="Left" />
        <Button
            x:Name="bCalcola"
            Canvas.Left="165"
            Canvas.Top="300"
            Width="80"
            Height="50"
            Content="Calcola" />

    </Canvas>
</Window>
